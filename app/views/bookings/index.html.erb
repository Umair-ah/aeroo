<p style="color: green"><%= notice %></p>

<h1 class="text-center display-4 mb-2">Bookings</h1>
<div class="d-flex justify-content-between align-items-center p-4">
  <%= link_to "New booking", new_booking_path, class:"btn btn-primary mb-4 mt-2" %>
  <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class:"btn btn-danger mb-4 mt-2" %>
</div>

<div id="bookings">
  <% @bookings.each do |booking| %>
    <%= render booking %>
  <% end %>
</div>

